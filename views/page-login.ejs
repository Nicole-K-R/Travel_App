		$("#add-entry-btn").on('click', function(){
			console.log("Add Entry Button Clicked");
			
		});

		// Submit add entry form
		$("#add-entry-btn").on('click', function(){
			console.log("Add Entry Button Clicked");
			
		});

		// Submit add entry form
		$("#add-entry-btn").on('click', function(){
			console.log("Add Entry Button Clicked");
			
		});

	});
</script>
